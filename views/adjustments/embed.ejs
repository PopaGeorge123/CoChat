  <style>
    .code-box {
      border: 1px solid #ced4da;
      border-radius: 0.25rem;
      padding: 10px;
      margin-bottom: 20px;
      background-color: #f8f9fa;
    }
    .code-box textarea {
      width: 100%;
      min-height: 200px;
      resize: none;
      font-family: 'Courier New', Courier, monospace;
      color: #212529; /* Darker text color */
      background-color: transparent; /* Transparent background */
      border: none; /* Remove border */
      text-wrap: nowrap;
      
    }
    .copy-btn {
      margin-top: 10px;
    }
  </style>
</head>
<body>

  <div class="container my-5">
    <h2>Your assistant code</h2>
    <div class="code-box">
      <textarea readonly >
  //place this code before closing body tag
  
  <script 
    src="https://www.wisesupp.com/scripts/embed-assistant.js" 
    baseUrl = 'https://www.wisesupp.com'
    assistant="<%= data %>" 
    defer>
  </script>
  
      </textarea>
    </div>
    <button class="btn btn-primary copy-btn" onclick="copyCode()">Copy Code</button>
  </div>
  
  
  <script>
    function copyCode() {
      const textarea = document.querySelector('.code-box textarea');
      textarea.select();
      document.execCommand('copy');
      alert('Code copied to clipboard!');
    }
  </script>